<html>
  <head>

  </head>
  <body>
    <h1>Books</h1>
    
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to 'Show',"/books/#{book.id}" %></td>
          <td><%= link_to 'Edit',"/books/#{book.id}" %></td>
          <td><%= link_to 'Destroy',"/books/#{book.id}" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>



    <h2>New Book</h2>
      <%= form_with model: Book.new do |f| %>
        <h4>titel</h4>
        <%= f.text_field :title %>

        <h4>body</h4>
        <%= f.text_area :body %>

        <%= f.submit 'Creste Book' %>
      <% end %>


  </body>
</html>